@page "/ResendEmailConfirmation"
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="px-4 py-4 text-center wpk-home-img" style="background-color: var(--wpk-secondary); min-height: calc(100vh - 64px);">
    <div class="wpk-30w-section wpk-secondary-bg wpk-border-round-1 wpk-pad-10" style="min-width: 350px;">
        <div class="wpk-80p">
            <h1>Resend email confirmation</h1>
            <div style="text-align:left">

                <div>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" disabled />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Resend</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
