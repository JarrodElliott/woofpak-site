@page "/Login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="px-4 py-4 text-center wpk-home-img" style="background-color: var(--wpk-secondary); min-height: calc(100vh - 64px);">
    <div class="wpk-30w-section wpk-secondary-bg wpk-border-round-1 wpk-pad-10" style="min-width: 350px;">
        <div class="wpk-80p">
            <div>
                <section>
                    <h3 class="wpk-dark-text">Sign In</h3>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger form-validation-summary"></div>
                        <div class="form-group">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a class="wpk-highlight-text" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a class="wpk-highlight-text" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
